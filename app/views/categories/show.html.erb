
<style>

#image_gallery {
    margin-top: 0%;
}
</style>
    <!--   *** TEXT ***-->
      <section id="text" class="text-page section-inverse background-secondary bg-img">
        <div class="container">
          <div class="row">
            <div class="col-md-12" style="width: 75%;">
              <h2 class="text-center" style="color:black;text-align: left;"><%= @category.name %></h2>
              <p class="lead text-center" style="color:black;text-align: left;font-weight:500;"><%= @category.desc %></p>

            </div>
          </div>
        </div>
      </section>
<section id="image_gallery">
  <div class="container gal-container">
  <% Photo.where(category_id: @category.id).each_with_index do |photo, index| %>
    <div class="col-md-4 col-sm-6 co-xs-12 gal-item">
      <div class="box">
        <a href="#" data-toggle="modal" data-target="#photo<%= index + 1 %>">
          <%= image_tag photo.image.url %>
        </a>
        <div class="modal fade" id="photo<%= index + 1 %>" tabindex="-1" role="dialog">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
              <div class="modal-body">
                <%= link_to download_url(photo), class: "download_link" do %>
                <i class="fas fa-cloud-download-alt"></i>
                <% end %>
                
                <%= image_tag photo.image.url %>
              </div>
                <div class="col-md-12 description">
                  <h4><%= photo.title %></h4>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
   
    </div>
</section>